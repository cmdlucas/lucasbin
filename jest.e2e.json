{
  "verbose": true,
  "moduleFileExtensions": ["js", "json", "ts", "tsx"],
  "rootDir": "./e2e",
  "testRegex": ".*\\.spec\\.tsx?$",
  "displayName": "End-to-End Tests",
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "setupFilesAfterEnv": ["<rootDir>/../testSetup.ts"],
  "globals": {
    "ts-jest": {
      "tsConfig": "<rootDir>/../tsconfig.jest.json"
    }
  }
}
